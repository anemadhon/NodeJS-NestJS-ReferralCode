// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Users {
    id       String @unique
    name     String
    username String @unique
    password String
    division String @default("Operational")

    referrals Referrals[]
}

model Referrals {
    id          String @unique
    code        String @unique
    type        String
    description String
    creatorId   String
    createdAt   Int
    updatedAt   Int
    createdFrom String
    updatedFrom String

    creator Users @relation(fields: [creatorId], references: [id])
}

model Authentications {
    token String @unique
}
